<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtUsuario4"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:layout_x="34dp"
        android:layout_y="84dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Matricula IDO 2020"
        android:textAlignment="center"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="266dp" />

    <TextView
        android:id="@+id/txtUsuario3"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:layout_x="33dp"
        android:layout_y="49dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Instituto departamental de oriente "
        android:textAlignment="center"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="266dp" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="354dp"
        android:layout_height="25dp"
        android:layout_x="31dp"
        android:layout_y="453dp"
        android:text="Restablecer Contraseña"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold|normal"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="266dp" />

    <TextView
        android:id="@+id/txtUsuario"
        android:layout_width="366dp"
        android:layout_height="wrap_content"
        android:layout_x="23dp"
        android:layout_y="235dp"
        android:text="Usuario"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold|normal"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="266dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="245dp"
        android:layout_height="48dp"
        android:layout_x="82dp"
        android:layout_y="268dp"
        android:background="@drawable/edit_text"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="387dp" />

    <EditText
        android:id="@+id/etxtUsuario"
        android:layout_width="245dp"
        android:layout_height="48dp"
        android:layout_below="@id/txtIdentidad"
        android:layout_toRightOf="@+id/txtIdentidad"
        android:layout_x="83dp"
        android:layout_y="351dp"
        android:background="@drawable/edit_text"
        android:focusable="false"
        android:padding="20dp"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="308dp" />

    <TextView
        android:id="@+id/txtUsuario2"
        android:layout_width="365dp"
        android:layout_height="25dp"
        android:layout_x="23dp"
        android:layout_y="320dp"
        android:text="Contraseña"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold|normal"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="266dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="167dp"
        android:layout_height="117dp"
        android:layout_x="125dp"
        android:layout_y="111dp"
        app:srcCompat="@drawable/ido" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="165dp"
        android:backgroundTint="@color/colorPrimary"
        android:background="@drawable/edit_text"
        android:layout_y="401dp"
        android:text="Button" />


</AbsoluteLayout>